<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.CanvasController">
  <children>
    <AnchorPane styleClass="app-bar">
      <children>
        <Label maxHeight="70.0" prefHeight="70.0" prefWidth="355.0" text="Quick, Draw! SE206 Edition" textAlignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
          <font>
            <Font name="SansSerif Regular" size="24.0" />
          </font>
        </Label>
      </children>
    </AnchorPane>
    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <children>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="hiddenModeVbox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="181.0" prefWidth="1150.0">
                           <children>
                              <VBox fx:id="previousDefinitionVbox" alignment="BOTTOM_CENTER" prefHeight="137.0" prefWidth="222.0" spacing="25.0">
                                 <children>
                                    <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onClickPrevious" prefHeight="69.0" prefWidth="87.0" style="-fx-background-color: white; -fx-pref-width: 40; -fx-pref-height: 80;" styleClass="left-icon" VBox.vgrow="SOMETIMES" />
                                    <Label onMouseClicked="#onClickPrevious" styleClass="text-default" text="Previous Definition">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <Label fx:id="definitionsLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="186.0" prefWidth="682.0" styleClass="text-default" text="Target Word" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="SansSerif Regular" size="36.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="nextDefinitionVbox" alignment="BOTTOM_CENTER" prefHeight="137.0" prefWidth="222.0" spacing="25.0">
                                 <children>
                                    <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onClickNext" prefHeight="69.0" prefWidth="87.0" style="-fx-background-color: white; -fx-pref-width: 40; -fx-pref-height: 80; -fx-rotate: 180;" styleClass="left-icon" VBox.vgrow="SOMETIMES" />
                                    <Label onMouseClicked="#onClickNext" styleClass="text-default" text="Next Definition">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label fx:id="numberOfDefinitionLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="403.0" styleClass="text-default" text="Number of definitions...">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
              <HBox fx:id="defaultHbox" alignment="CENTER" spacing="5.0">
                <children>
                  <Label alignment="CENTER_RIGHT" text="You are drawing:" textFill="WHITE">
                    <font>
                      <Font size="32.0" />
                    </font>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                  </Label>
                  <Label fx:id="targetWordLabel" alignment="CENTER_RIGHT" text="Target" textAlignment="CENTER" textFill="WHITE">
                    <font>
                      <Font name="SansSerif Bold" size="42.0" />
                    </font>
                  </Label>
                </children>
              </HBox>
               </children>
            </StackPane>
        <HBox alignment="CENTER" styleClass="bg-gray-25">
          <children>
            <Pane minHeight="0.0" minWidth="0.0" HBox.hgrow="ALWAYS" />
            <GridPane alignment="TOP_CENTER" hgap="20.0" prefHeight="431.0" prefWidth="690.0" vgap="20.0" HBox.hgrow="ALWAYS">
              <HBox.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
              </HBox.margin>
              <children>
                <HBox alignment="CENTER" prefHeight="39.0" prefWidth="187.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <HBox fx:id="gameOverActionsContainer" alignment="CENTER" prefHeight="30.0" prefWidth="516.0" spacing="20.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                  <children>
                    <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" prefWidth="145.0" styleClass="btn" text="Save" />
                    <Button mnemonicParsing="false" onAction="#onRestart" prefWidth="145.0" styleClass="btn" text="Play Again" />
                    <Button mnemonicParsing="false" onAction="#onReturnToMainMenu" styleClass="btn" text=" Main Menu" />
                  </children>
                </HBox>
                <Label fx:id="mainLabel" contentDisplay="CENTER" styleClass="text-default" text="60 Seconds" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                  <font>
                    <Font name="SansSerif Regular" size="24.0" />
                  </font>
                </Label>
                <Label styleClass="text-default" text="Predictions" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                  <font>
                    <Font name="SansSerif Regular" size="24.0" />
                  </font>
                </Label>
                <Pane maxWidth="521.0" prefWidth="521.0" styleClass="card" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                  <children>
                    <Canvas fx:id="canvas" height="315.0" layoutY="-10.0" styleClass="bg-highlight" width="483.0">
                      <cursor>
                        <Cursor fx:constant="HAND" />
                      </cursor>
                    </Canvas>
                  </children>
                </Pane>
                <Pane minHeight="0.0" minWidth="0.0" />
                <VBox fx:id="predictionVertBox" alignment="TOP_CENTER" minWidth="182.0" prefHeight="325.0" prefWidth="182.0" spacing="5.0" GridPane.rowIndex="1" GridPane.valignment="TOP">
                  <padding>
                    <Insets top="30.0" />
                  </padding>
                  <styleClass>
                    <String fx:value="prediction-container" />
                    <String fx:value="bg-lightgray-100" />
                  </styleClass>
                </VBox>
                <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
                  <children>
                    <VBox fx:id="toolContainer" alignment="CENTER" VBox.vgrow="ALWAYS">
                      <children>
                        <VBox alignment="CENTER">
                          <children>
                            <Pane fx:id="eraserPane" accessibleHelp="Select the eraser" accessibleRole="BUTTON" onMouseClicked="#onSelectEraser">
                              <children>
                                <Pane layoutX="8.0" layoutY="7.0" prefHeight="25.0" prefWidth="83.0" />
                              </children>
                              <styleClass>
                                <String fx:value="eraser-icon" />
                                <String fx:value="icon" />
                              </styleClass>
                            </Pane>
                            <Pane fx:id="penPane" accessibleHelp="Select the pen brush" accessibleRole="BUTTON" onMouseClicked="#onSelectPen">
                              <children>
                                <Pane layoutX="9.0" layoutY="7.0" prefHeight="25.0" prefWidth="83.0" />
                              </children>
                              <styleClass>
                                <String fx:value="icon" />
                                <String fx:value="pen-icon" />
                              </styleClass>
                            </Pane>
                            <Pane fx:id="clearPane" accessibleHelp="Clear the canvas" accessibleRole="BUTTON" onMouseClicked="#onClear">
                              <children>
                                <Pane layoutX="11.0" layoutY="7.0" prefHeight="25.0" prefWidth="83.0" />
                              </children>
                              <styleClass>
                                <String fx:value="icon" />
                                <String fx:value="trashcan-icon" />
                              </styleClass>
                            </Pane>
                          </children>
                          <styleClass>
                            <String fx:value="icon-btn-row" />
                            <String fx:value="bg-lightgray-100" />
                          </styleClass>
                        </VBox>
                      </children>
                    </VBox>
                  </children>
                </VBox>
              </children>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="363.0" minWidth="10.0" prefWidth="220.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="516.0" minWidth="10.0" prefWidth="516.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="516.0" minWidth="-Infinity" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" vgrow="NEVER" />
              </rowConstraints>
            </GridPane>
            <Pane layoutX="10.0" layoutY="10.0" minHeight="0.0" minWidth="0.0" HBox.hgrow="ALWAYS" />
          </children>
          <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" />
          </opaqueInsets>
        </HBox>
      </children>
    </VBox>
  </children>
  <styleClass>
    <String fx:value="bg-gray-25" />
    <String fx:value="root-element" />
  </styleClass>
  <stylesheets>
    <URL value="@../css/styles.css" />
    <URL value="@../css/colours.css" />
    <URL value="@../css/zen_mode.css" />
  </stylesheets>
</VBox>
