<AnchorPane maxHeight="80.0" minHeight="80.0" prefHeight="80.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.HeaderController">
   <children>
      <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" spacing="5.0">
               <children>
                  <Label fx:id="username" contentDisplay="RIGHT" styleClass="text-default" text="Username">
                     <font>
                        <Font name="SansSerif Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label contentDisplay="RIGHT" onMouseClicked="#onSwitchUser" text="Switch User">
                     <font>
                        <Font name="SansSerif Regular" size="16.0" />
                     </font>
                     <styleClass>
                        <String fx:value="text-lightgray-100" />
                        <String fx:value="switch-user" />
                     </styleClass>
                  </Label>
               </children>
            </VBox>
            <Pane maxHeight="60.0" maxWidth="60.0" minHeight="60.0" minWidth="60.0" prefHeight="60.0" prefWidth="60.0">
               <children>
                  <ImageView fx:id="profilePicture" fitHeight="60.0" fitWidth="60.0" onMouseClicked="#onClickProfile" pickOnBounds="true" preserveRatio="true" />
               </children>
               <styleClass>
                  <String fx:value="hover-border" />
                  <String fx:value="profile-border" />
               </styleClass>
            </Pane>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../css/header.css" />
      <URL value="@../css/colours.css" />
      <URL value="@../css/styles.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="bg-gray-50" />
      <String fx:value="header" />
   </styleClass>
</AnchorPane>
